<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="LechYTDLP.Views.LogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:LechYTDLP.Views"
      xmlns:log="using:LechYTDLP.Services"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <StackPanel Orientation="Vertical"
                Margin="36,40,36,0">

        <TextBlock Text="Logs"
                   Style="{StaticResource TitleLargeTextBlockStyle}"
                   Margin="0,0,0,24" />

        <Grid RowSpacing="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ListView Grid.Row="0"
                      Height="400"
                      x:Name="LogListView" SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="log:LogItem">
                        <Grid>
                            <Grid.ContextFlyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem x:Name="Copy" Text="Copy" Click="MenuFlyoutItem_Click" />
                                </MenuFlyout>
                            </Grid.ContextFlyout>
                            <TextBlock Text="{x:Bind Message}"
                                       TextWrapping="Wrap"
                                       FontFamily="Consolas"
                                       FontSize="14"
                                       Foreground="{x:Bind Tag, Converter={StaticResource LogTagToBrushConverter}}" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Padding"
                                Value="0" />
                        <Setter Property="Margin"
                                Value="0" />
                        <Setter Property="MinHeight"
                                Value="0" />
                        <Setter Property="HorizontalContentAlignment"
                                Value="Stretch" />
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>

        </Grid>

    </StackPanel>
</Page>